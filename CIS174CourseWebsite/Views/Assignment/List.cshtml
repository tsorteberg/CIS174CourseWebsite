@model List<Assignment>
@{
    ViewBag.Title = "Assignment List:";
}

<h2>@ViewBag.Title</h2>
<div >
    <table class="table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>URL</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var assignment in Model)
            {
                <tr>
                    <td>@assignment.Name</td>
                    <td class="cell-breakWord"><a href="@assignment.URL">@assignment.URL</a></td>
                    <td>@assignment.Note</td>
                </tr>
            }
        </tbody>
    </table>
</div>
