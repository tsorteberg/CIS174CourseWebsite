@model RegistrationModel
@{
    ViewBag.Title = "Registration System";
}


<form asp-action="Index" method="post">
    <div class="form-group row">
        <div class="col-sm-2"><label>Name:</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.Name" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Address:</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.Address" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="@Model.Address" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Phone Number:</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.Phone" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="@Model.Phone" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Email Address:</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.EmailAddress" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="@Model.EmailAddress" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Contact Preference:</label></div>
        <div class="col-sm-4">
            <select asp-for="@Model.Preference" class="form-control">
                <option></option>
                <option>By Phone</option>
                <option>By Email</option>
                <option>By Surface Mail</option>
            </select>
        </div>
        <div class="col">
            <span asp-validation-for="@Model.Preference" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Register</button>
            <a asp-action="ViewFormData" asp-controller="Display" class="btn btn-primary">View Registration List</a>
        </div>
    </div>
</form>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>