@model IEnumerable<Country>
@{
    ViewData["Title"] = "Olypic Paricipants";
    string Active(string filter, string selected)
    {
        return (filter.ToLower() == selected.ToLower()) ? "active" : "";
    }
}
<div class="container">
    <div class="text-center text-white">
        <h1 class="bg-primary mt-3 p-3">Olympic Participants</h1>
    </div>
</div>
<div class="row">
    <div class="col-sm-3">
        <h3 class="mt-3">Game</h3>
        <div class="list-group">
            @foreach (Game game in ViewBag.Games)
            {
                <a asp-action="Index"
                   asp-route-activeGame="@game.GameID"
                   asp-route-activeCategory="@ViewBag.ActiveCategory"
                   class="list-group-item @Active(game.GameID,
                                           ViewBag.ActiveGame)">
                    @game.Name
                </a>
            }
        </div>
        <h3 class="mt-3">Category</h3>
        <div class="list-group">
            @foreach (Category category in ViewBag.Categories)
            {
                <a asp-action="Index"
                   asp-route-activeGame="@ViewBag.ActiveGame"
                   asp-route-activeCategory="@category.CategoryID"
                   class="list-group-item @Active(category.CategoryID,
                                           ViewBag.ActiveCategory)">
                    @category.Name
                </a>
            }
        </div>
    </div>
    <div class="col-sm-9">
        <ul class="list-inline">
            @foreach (Country country in Model)
            {
                <li class="list-inline-item">
                    <img src="~/images/@country.LogoImage" alt="@country.Name"
                         title="@country.Name | @country.Game.Name | @country.Category.Name" />
                </li>
            }
        </ul>
    </div>
</div>