@model Assignment
@{
    ViewBag.Title = "Delete Assignment";
}

<h2>Confirm Deletion</h2>
<h3>@Model.Name (@Model.URL)</h3>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="AssignmentId" />

    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-controller="AdminHome" asp-action="AdminIndex" class="btn btn-outline-secondary">Cancel</a>
</form>
