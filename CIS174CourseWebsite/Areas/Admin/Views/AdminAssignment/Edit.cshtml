@model Assignment
@{
    string title = ViewBag.Action + " Assignment";
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="URL">URL</label>
        <input asp-for="URL" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Note">Notes</label>
        <input asp-for="Note" class="form-control" />
    </div>

    <input type="hidden" asp-for="AssignmentId" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="AdminHome" asp-action="AdminIndex" class="btn btn-outline-secondary">Cancel</a>
</form>
